{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "globalEnv": [
    "RENOUN_DEBUG",
    "GITHUB_SPONSORS_TOKEN",
    "TEMPLATE_CHECKOUT_URL"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
